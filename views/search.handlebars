 <!DOCTYPE html>
<html>
    <head>
        <title>Xue-ba search</title>
        <link href="/styles/search.css" rel="stylesheet" />
    </head>
    <body>
        <div class="nav">
            <div class="nav-inner">
                <a href="/" class="label">
                    <img viewbox="0 0 250 100" class="logo" src="/img/xueba.png" />
                </a>
                <nav>
                    <a class="nav-item" href="/search">Find a Tutor</a>
                    <a class="nav-item" href="/apply" target="_blank">Become a Tutor</a>
                    <a class="nav-item" href="/profile">Profile</a>
                </nav>
                {{!-- <div>
                    <a class="nav-item" href="/login" style="float:right">Log In</a>
                </div> --}}
            </div>
        </div>
                
        <div class="searchBar">
            <h3>Search For Sections</h3>
            <div class="department-course">           
                <div class="department">
                    <form method="GET" id="formSubDep"> 
                        <p>Click your department : </p> 
                        <select name="department" size="5">
                            <option onclick="submitDep()" value='000' >000 : All Departments</option>
                            {{#each departments}}   
                            <option onclick="submitDep()" value='{{this.DepartmentID}}' >{{this.DepartmentID}} : {{this.DepartmentName}}</option>
                            {{/each}}
                        </select>
                        <input id="subDep" type="submit" form="formSubDep"  formaction="/search" style="visibility:hidden">
                    </form>                    
                </div>

                <div class="course"> 
                    <form  method="GET" id="formSubCourse">
                        <input type="text" id="myInput" autocomplete="off" list="courses" name="course" placeholder="Search Your Course Name.." required> 
                            {{#if courses}}
                                <datalist id="courses">
                                    {{#each courses}}   
                                        <option  value='{{this.CourseID}}'>{{this.CourseName}}</option>
                                    {{/each}}
                                </datalist> 
                            {{/if}}
                         <input type="submit" form="formSubCourse"  formaction="/search/section" class="btn btn-primary" id="searchNewBtn" value="Find tutor">
                    </form>
                  
                </div>  
            </div>
        </div>

        <div class="section">
            <h3>Section List</h3>
            {{#if searchTutor}}
                <div class="errorMessage">
                    {{searchTutor}}
                </div>
            {{/if}}
            
            {{#if bookMessage}}
                <div class="errorMessage">
                {{bookMessage}}
                </div>
            {{/if}}

            {{#if sections}}
                {{>section}}
            {{/if}}

        </div>


        <script src="/js/xueba.js" ></script>    
    </body>
</html>